  %body
    %header
      %hgroup
        %h1= t.title
        %h2(lang="en-US")= t.tagline
      %p.abstract
        = t.abstract
      %ul.agile-values
        %li= t.agile_values.value_1
        %li= t.agile_values.value_2
        %li= t.agile_values.value_3
        %li= t.agile_values.value_4
    .content
      %nav
        %ul
          %li.active Ev√©nement
          %li Agenda
          %li A propos
          %li Presse
      %article#event.active
        = yield
      %aside
        %h1.twitter= t.twitter
        .tweet
        %a.follow_on_twitter(href="http://twitter.com/#!/agilecampustour")= t.follow_us
