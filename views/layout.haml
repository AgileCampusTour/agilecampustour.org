%html
  %head
    %meta(charset="UTF-8")
    %meta(name="author" content="Julien Biezemans")
    %title Agile Campus Tour
    %link(rel="stylesheet" href="/stylesheets/main.css" media="screen")
    %script(type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js")
    %script(type="text/javascript" src="/javascripts/jquery.tweet.js")
    %script(type="text/javascript" src="/javascripts/act.js")
